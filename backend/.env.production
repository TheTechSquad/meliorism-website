# Production Environment Configuration

# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://username:password@hostname:port/meliorism_foundation

# JWT Configuration (Use a strong secret in production)
JWT_SECRET=your-production-jwt-secret-key-min-256-bits

# CORS Configuration
CORS_ORIGIN=https://your-production-domain.com
FRONTEND_URL=https://your-production-domain.com

# Paystack Configuration (Production keys)
PAYSTACK_SECRET_KEY=sk_live_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_live_your_paystack_public_key

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-production-email@gmail.com
EMAIL_PASS=your-app-password

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=error

# SSL/TLS (if using HTTPS)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key