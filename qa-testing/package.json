{
  "name": "meliorism-foundation-qa-testing",
  "version": "1.0.0",
  "description": "QA testing suite for Meliorism Foundation website",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:api": "jest login.test.js",
    "test:frontend": "jest frontend.test.js"
  },
  "keywords": ["testing", "jest", "playwright", "qa", "automation"],
  "author": "Meliorism Foundation QA Team",
  "license": "MIT",
  "dependencies": {
    "supertest": "^6.3.3"
  },
  "devDependencies": {
    "jest": "^29.6.1",
    "@playwright/test": "^1.37.0",
    "@testing-library/jest-dom": "^5.16.4",
    "jest-environment-node": "^29.6.1"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "collectCoverageFrom": [
      "../backend/src/**/*.js",
      "!../backend/src/app.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
}